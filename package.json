{
  "name": "fastify-service-skeleton",
  "version": "0.14.0",
  "description": "Create fastify based microservices even faster.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:write": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micro-tools/fastify-service-skeleton.git"
  },
  "keywords": [
    "fastify",
    "microservice"
  ],
  "author": "Juri Wiens <juriwiens@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micro-tools/fastify-service-skeleton/issues"
  },
  "homepage": "https://github.com/micro-tools/fastify-service-skeleton#readme",
  "dependencies": {
    "@types/pino": "^6.0.0",
    "fastify": "^2.13.1",
    "fastify-plugin": "^1.6.0",
    "fastify-sensible": "^2.1.1",
    "got": "^10.7.0",
    "hyperid": "^2.0.3",
    "lodash.merge": "^4.6.2",
    "pino": "^6.2.0",
    "pino-pretty": "^4.0.0",
    "prom-client": "^12.0.0",
    "under-pressure": "^3.2.1",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/flush-write-stream": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^13.13.0",
    "@types/split2": "^2.1.6",
    "@types/uuid": "^7.0.2",
    "flush-write-stream": "^2.0.0",
    "jest": "^25.4.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.4",
    "rxjs": "^6.5.5",
    "split2": "^3.1.1",
    "strict-event-emitter-types": "^2.0.0",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.7.5",
    "utility-types": "^3.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
