{
  "name": "fastify-service-skeleton",
  "version": "0.25.0",
  "description": "Create fastify based microservices even faster.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist/ && yarn run compile && yarn run lint",
    "compile": "tsc -p tsconfig.build.json",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:write": "prettier --write 'src/**/*.ts'",
    "format:staged": "pretty-quick --staged",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublishOnly": "yarn test && yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format:staged",
      "pre-push": "yarn run build && yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micro-tools/fastify-service-skeleton.git"
  },
  "keywords": [
    "fastify",
    "microservice"
  ],
  "author": "Juri Wiens <juriwiens@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micro-tools/fastify-service-skeleton/issues"
  },
  "homepage": "https://github.com/micro-tools/fastify-service-skeleton#readme",
  "dependencies": {
    "@types/pino": "^6.3.3",
    "fastify": "^3.8.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.0.1",
    "got": "^11.8.0",
    "hyperid": "^2.0.5",
    "lodash.merge": "^4.6.2",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "prom-client": "^12.0.0",
    "remeda": "^0.0.27",
    "under-pressure": "^5.3.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/flush-write-stream": "^1.0.0",
    "@types/jest": "^26.0.15",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^14.14.7",
    "@types/split2": "^2.1.6",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "flush-write-stream": "^2.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rxjs": "^6.6.3",
    "split2": "^3.2.2",
    "strict-event-emitter-types": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "utility-types": "^3.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
